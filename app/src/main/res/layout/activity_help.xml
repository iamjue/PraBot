<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardview_help"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginLeft="40dp"
    android:layout_marginRight="40dp"
    app:cardCornerRadius="10dp"
    tools:context=".Activity.HelpActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:orientation="vertical"
        android:padding="15dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="30dp"
            android:text="@string/help"
            android:textAlignment="center"
            android:textColor="@color/colorcokelat"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_help_deskrip1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="@string/help_deskrip1"
            android:textColor="@color/colorcokelat" />

        <TextView
            android:id="@+id/tv_help_deskrip2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="@string/help_deskrip2"
            android:textColor="@color/colorcokelat" />

        <TextView
            android:id="@+id/tv_help_deskrip3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="@string/help_deskrip3"
            android:textColor="@color/colorcokelat" />

        <TextView
            android:id="@+id/tv_help_deskrip4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="@string/help_deskrip4"
            android:textColor="@color/colorcokelat" />

        <TextView
            android:id="@+id/tv_help_deskrip5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="@string/help_deskrip5"
            android:textColor="@color/colorcokelat" />

        <Button
            android:id="@+id/btn_selesai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="42dp"
            android:background="@drawable/button"
            android:text="@string/selesai"
            android:textColor="@color/colorWhite"
            android:textStyle="bold" />
    </LinearLayout>


</android.support.v7.widget.CardView>