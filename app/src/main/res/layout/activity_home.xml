<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:paddingLeft="40dp"
    android:paddingRight="40dp"
    tools:context=".HomeActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/prabot"
        android:textAlignment="center"
        android:textColor="@color/colorBlack"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_pramuka_robot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_login"
        android:text="@string/prabot3"
        android:textAlignment="center"
        android:textColor="@color/colorBlack"
        android:textSize="30sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_mulai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/mulai"
        android:layout_below="@id/tv_pramuka_robot"
        android:textSize="18sp"
        android:layout_marginTop="80dp"
        android:background="@color/colorBrownDark"
        android:textColor="@color/colorWhite"/>

    <Button
        android:id="@+id/btn_help"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_mulai"
        android:layout_marginTop="15dp"
        android:text="@string/help"
        android:textSize="18sp"
        android:background="@color/colorBrownDark"
        android:textColor="@color/colorWhite"/>

    <Button
        android:id="@+id/btn_about"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_help"
        android:layout_marginTop="15dp"
        android:text="@string/about"
        android:textSize="18sp"
        android:background="@color/colorBrownDark"
        android:textColor="@color/colorWhite"/>

    <Button
        android:id="@+id/btn_exit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_about"
        android:layout_marginTop="15dp"
        android:text="@string/exit"
        android:textSize="18sp"
        android:background="@color/colorBrownDark"
        android:textColor="@color/colorWhite"/>

</RelativeLayout>